{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Brightstaff",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/brightstaff",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "sourceLanguages": ["rust"],
      "env": {
        "RUST_LOG": "debug",
        "RUST_BACKTRACE": "1",
        "ARCH_CONFIG_PATH_RENDERED": "../demos/use_cases/mcp_filter/config.yaml_rendered",
        "OTEL_COLLECTOR_URL": "http://localhost:4317",
        "OTEL_TRACING_ENABLED": "true"
      },
      "preLaunchTask": "rust: cargo build"
    }
  ]
}
